// Reactive Markets Switchboard (RMS).
file_identifier "RMS1";
file_extension "rms";

namespace Switchboard;

union Body {
    ExecutionReport,
    Heartbeat,
    MarketDataRequest,
    MarketDataRequestReject,
    MarketDataSnapshot,
    NewOrderSingle,
    OrderCancelReject,
    OrderCancelRequest,
    OrderReplaceRequest,
    Reject,
    TestRequest
}

table Message {
    /// Time of message transmission in UTC.
    sending_time: long;
    /// Message body.
    body: Body;
}

root_type Message;
