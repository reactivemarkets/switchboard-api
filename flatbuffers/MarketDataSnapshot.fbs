include "Enum.fbs";

namespace Switchboard;

struct MDEntry {
    // Bitset describing conditions of the quote.
    conditions: ushort;
    /// Size of the MDEntry.
    size: double;
    /// Price of the MDEntry.
    price: double;
}

table MarketDataSnapshot {
    /// Source system timestamp.
    orig_time: long;
    /// Request identifier assigned by the client.
    req_id: string;
    /// Trading account.
    account: string (required);
    /// Instrument symbol.
    symbol: string (required);
    /// Exchange or venue symbol.
    venue: string (required);
    /// Tenor symbol.
    tenor: string;
    /// Security Type. defaults to SpotFwd.
    security_type: SecurityType;
    /// Quote or liquidity type.
    quote_type: QuoteType;
    /// The fixing date in YYYYMMDD format.
    fixing_date: int;
    /// The settlement date in YYYYMMDD format.
    settlement_date: int;
    /// Quote identifier.
    quote_id: string;
    /// Bid market data entries.
    bid: [MDEntry] (required);
    /// Offer market data entries.
    offer: [MDEntry] (required);
}
